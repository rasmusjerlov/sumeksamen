
@{
    ViewData["Title"] = "Find Elev";
}

<h2>Find Elev</h2>

<form asp-action="FindElev" method="post">
    <div class="form-group">
        <label for="elevNavn">Elev Navn:</label>
        <input type="text" class="form-control" id="elevNavn" name="elevNavn" required />
    </div>
    <button type="submit" class="btn btn-primary">Søg</button>
</form>

@if (ViewBag.ElevNavn != null)
{
    <h3>Resultater for: @ViewBag.ElevNavn</h3>
    <ul>
        @foreach (var venteliste in Model)
        {
            <li>
                Årgang: @venteliste.Aargang
                <form asp-action="SletElev" method="post" style="display:inline;">
                    <input type="hidden" name="elevNavn" value="@ViewBag.ElevNavn" />
                    <button type="submit" class="btn btn-danger btn-sm">Slet Elev</button>
                </form>
                <form asp-action="TilfoejBemaerkning" method="post" style="display:inline;">
                    <input type="hidden" name="elevNavn" value="@ViewBag.ElevNavn" />
                    <input type="text" name="bemærkning" placeholder="Tilføj bemærkning" required />
                    <button type="submit" class="btn btn-success btn-sm">Tilføj Bemærkning</button>
                </form>
            </li>
        }
    </ul>
}


