@{
    ViewData["Title"] = "Vælg Tilføjelsesmetode";
    var aargang = TempData["Aargang"];
}

<!DOCTYPE html>
<html>
<head>
    <title>Vælg Tilføjelsesmetode</title>
</head>
<body>
<h2>Venteliste for årgang @aargang er oprettet</h2>
<p>Vælg, hvordan du vil tilføje elever til denne venteliste:</p>

<div>
    <!-- Link til upload af elever -->
    <form action="@Url.Action("UploadElever", "Venteliste")" method="get">
        <input type="hidden" name="aargang" value="@aargang" />
        <button type="submit">Upload elever fra Excel-fil</button>
    </form>

    <!-- Link til manuel tilføjelse af elever -->
    <form action="@Url.Action("TilfoejElev", "Venteliste")" method="get">
        <input type="hidden" name="aargang" value="@aargang" />
        <button type="submit">Tilføj elev manuelt</button>
    </form>
</div>

<h3><a href="@Url.Action("Ventelister", "Venteliste")">Tilbage til Ventelister</a></h3>
</body>
</html>

